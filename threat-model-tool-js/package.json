{
  "name": "threat-model-tool-js",
  "version": "1.0.0",
  "type": "module",
  "description": "A TypeScript/JavaScript implementation of a threat modeling tool, inspired by a Python version.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsx --test tests/ThreatModel.test.ts",
    "test:unit": "tsx --test tests/ThreatModel.test.ts",
    "test:build": "tsx src/scripts/build-threat-model.ts",
    "start": "node dist/index.js",
    "compile": "tsc --noEmit",
    "build:example": "tsx src/scripts/build-threat-model.ts ../tests/exampleThreatModels/FullFeature/FullFeature.yaml ./test-output"
  },
  "dependencies": {
    "cheerio": "^1.2.0",
    "cvss": "^1.0.5",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.2"
  },
  "devDependencies": {
    "@types/cvss": "^1.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "eslint": "^7.32.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "threat-modeling",
    "security",
    "javascript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
