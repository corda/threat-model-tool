@startuml
title Attack Tree: Unauthorized Data Exposure

skinparam rectangle {
  BackgroundColor lightyellow
  BorderColor black
}

rectangle "Unauthorized Data Exposure" as root {
  Information Disclosure
}

rectangle "Attack Method" as attack {
  An attacker accesses sensitive data through a
  misconfigured access control. 
}
root --> attack

package "Countermeasures" {
  rectangle "Enforce Access Control\n[Not In Place]" as cm0
  attack ..|> cm0 : mitigated by
}

@enduml
