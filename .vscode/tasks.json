{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "TS: Generate all example threat models",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "generate:examples"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threat-model-tool-js"
            },
            "problemMatcher": []
        },
        {
            "label": "TS: Generate selected example threat model",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "generate:example",
                "--example=${input:tmExample}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threat-model-tool-js"
            },
            "problemMatcher": []
        },
        {
            "label": "TS: Debug selected example threat model",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "generate:example:debug",
                "--example=${input:tmExample}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threat-model-tool-js"
            },
            "problemMatcher": []
        },
        {
            "label": "TS: Build Astro docs site",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:astroSite:examples"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threat-model-tool-js"
            },
            "problemMatcher": []
        },
        {
            "label": "TS: Serve Astro docs site",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "serve:astroSite"
            ],
            "options": {
                "cwd": "${workspaceFolder}/threat-model-tool-js"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ],
	"inputs": [
		{
			"id": "tmExample",
			"type": "pickString",
			"description": "Select the example threat model",
			"options": [
				"Example1",
				"Example2",
				"FullFeature"
			]
		}
	]
}
