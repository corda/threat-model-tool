{
  "name": "threat-model-tool",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },

  // Persist DinD images across rebuilds (plantuml, puppeteer, etc.)
  "mounts": [
    "source=threat-model-tool-dind,target=/var/lib/docker,type=volume"
  ],

  // Once â€” after container creation: install local packages as editable
  "postCreateCommand": "make init",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "tamasfe.even-better-toml",
        "jebbs.plantuml"
      ]
    }
  }
}
